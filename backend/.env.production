# ==============================================
# AI Notes App - Production Environment
# ==============================================

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration (Use MongoDB Atlas or secured instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-notes-app?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_64_CHARS_MIN
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# NVIDIA AI Configuration
NVIDIA_API_KEY=your-production-nvidia-api-key
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_LLM_MODEL=meta/llama-3.1-8b-instruct
NVIDIA_MAX_TOKENS=1024
NVIDIA_TEMPERATURE=0.7
NVIDIA_EMBEDDING_MODEL=nvidia/nv-embedqa-e5-v5
NVIDIA_EMBEDDING_DIMENSION=1024

# Vector Store Settings
FAISS_INDEX_PATH=./data/faiss_index
FAISS_USE_GPU=false
TOP_K_RESULTS=5

# CORS Configuration (Set to your production domain)
FRONTEND_URL=https://your-production-domain.com

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs/app.log
